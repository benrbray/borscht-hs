name:                borscht
version:             0.1.0.0
-- synopsis:
-- description:
-- bug-reports:
-- license:
license-file:        LICENSE
author:              Benjamin Bray
maintainer:          benrbray@gmail.com
-- copyright:
-- category:
build-type:          Simple
extra-source-files:  CHANGELOG.md

executable borscht
  hs-source-dirs:      src, src/commands, src/util
  main-is:             Main.hs
  other-modules:
    Discogs, RateLimit,
    Commands, SearchCmd, ListCmd, TestCmd
  -- other-extensions:
  build-depends:
    base >=4.14,
    lifted-base,
    directory,
    req,
    bytestring, text,
    aeson, aeson-pretty,
    optparse-applicative,
    raw-strings-qq,
    -- fuzzy string matching
    fuzzyset,
    -- monad transformers
    mtl, transformers,
    -- added for RateLimit.hs (may be ok to delete later)
    time, time-units, stm,
    containers, transformers
  -- hs-source-dirs:
  default-language:    Haskell2010
  default-extensions:
    OverloadedStrings,
    LambdaCase,
    InstanceSigs, ScopedTypeVariables,
    TypeApplications,
    GeneralizedNewtypeDeriving,
    -- used for monad transformers in mtl
    ConstraintKinds, FlexibleContexts,
    -- used by aeson
    DeriveGeneric, DefaultSignatures
